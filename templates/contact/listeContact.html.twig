{% extends 'base.html.twig' %}

{% block title %}Contact Manager{% endblock %}

{% block body %}
<h1 class="text-center pt-5 pd-5">Contact List :</h1>
<div class="row row-cols-4 justify-content-between gx-0">
{% for c in contactList%}
  <div class="col-sm-12 col-lg-3 mb-5 border rounded-top-5 border-3 border-{{c.sex ? "warning" : "success"}}" style="width: 15rem;">
  <div id="card" class="h-100 w-100 justify-content-around">
  <img class="card-img-top rounded-top-5 w-100 avatar" src={{c.avatar}} alt="{{c.firstName}} {{c.name}}">
  <div class="card-body text-center ">
    <h4 class="card-title text-center py-3">{{c.name|upper}} {{c.firstName}}</h4>
    <ul class="list-group">
        <li class="list-group-item h-auto">Sexe : <span class="bg-{{c.sex ? "warning" : "success"}}">{{c.sex ? "Femme" : "Homme" }}</span></li>
        <li class="list-group-item text-wrap h-auto">Adresse : {{c.street}} {{c.cp}} {{c.city}}</li>
        <li class="list-group-item text-wrap h-auto">Email : {{c.mail}}
    </ul>
    {% if contactList|length is same as(1) %}
      <a href="{{path('contacts')}}" class="btn btn-danger">Retour</a>
    {% endif %}
    {% if contactList|length > 1 %}
      <a href="{{path('ficheContact', {'id':c.id})}}" class="btn btn-danger">Fiche</a>
    {% endif %}
  </div>
</div>
</div>
{% endfor %}
</div>
{% endblock %}
